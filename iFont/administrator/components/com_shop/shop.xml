<extension type="component" version="1.7" method="upgrade">
	<name>Shop</name>
	<author>Duong Thien Duc</author>
	<creationDate>April 2006</creationDate>
	<copyright>(C) 2005 - 2011 Open Source Matters. All rights reserved.
	</copyright>
	<license>GNU General Public License version 2 or later; see
		LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.7.0</version>
	<description>Shop Component</description>
	<scriptfile>install.shop.php</scriptfile>

	<languages folder="site">
		<language tag="en-GB">language/en-GB.com_shop.ini</language>
	</languages>

	<administration>
		<menu img="class:contact">Shop</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu link="option=com_shop&amp;view=package"
				view="packages" img="class:contact" alt="Shop/Packages">Package</menu>
			<menu link="option=com_shop&amp;view=font" img="class:contact"
				view="fonts" alt="Shop/Fonts">Font</menu>
		</submenu>
		<files>
			<filename>backend.zip</filename>
			<filename>frontend.zip</filename>
			<filename>index.html</filename>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB.com_shop.ini</language>
			<language tag="en-GB">language/en-GB.com_shop.sys.ini</language>
		</languages>
	</administration>
</extension>